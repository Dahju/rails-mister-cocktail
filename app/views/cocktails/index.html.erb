<div class="container"></div>
  <div class="row">
    <h1 class="text-center" style= "margin-bottom: 30px;"> List of all your cocktails </h1>

    <div class="text-center" style="margin: 50px 0px ;">
      <%= link_to "New Cocktail", new_cocktail_path, class: 'btn btn-warning' %>
    </div>
</div>


  <div class="row">

    <% @cocktails.each do |cocktail| %>
     <div class="col-xs-12 col-sm-4">
        <div class="card-category"> </div>
            <div class="card-description text-center">
                <h2><%= cocktail.name %></h2>
                <%= link_to "show", cocktail_path(cocktail), class: "card-link" %>
            </div>
        </div>
    <% end %>
  </div>
</div>

